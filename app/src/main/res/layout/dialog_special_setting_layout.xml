<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="10dp"
    android:background="@drawable/loading_bg"
    >

    <com.closeby.clzby.customcontrol.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:text="Select Special Settings"
        android:textColor="@color/AppColor"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#888888"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <com.closeby.clzby.customcontrol.CustomFontButton
            android:id="@+id/btnStandard"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_round_bg"
            android:text="Standard Deal"
            android:textColor="@color/AppColor"/>

        <com.closeby.clzby.customcontrol.CustomFontButton
            android:id="@+id/btnSpecial"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_round_bg"
            android:text="Time Base Deal"
            android:textColor="@color/AppColor"/>

        <com.closeby.clzby.customcontrol.CustomFontButton
            android:id="@+id/btnCancel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_round_bg"
            android:text="Cancel"
            android:textColor="@color/AppColor"/>

    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/grid_deal_bg"
        android:layout_margin="2dp"
        android:clipChildren="false"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/tvBusinessLogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:src="@drawable/avatar"
                app:siBorderWidth="2dp"
                app:siBorderColor="#E6E6E6"/>

            <!--<com.makeramen.roundedimageview.RoundedImageView-->
                <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
                <!--android:id="@+id/tvBusinessLogo"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_margin="5dp"-->
                <!--android:src="@drawable/avatar"-->
                <!--app:riv_corner_radius="20dp"-->
                <!--app:riv_border_width="2dip"-->
                <!--app:riv_border_color="#333333"-->
                <!--app:riv_mutate_background="true"-->
                <!--app:riv_tile_mode="repeat"-->
                <!--app:riv_oval="true" />-->

            <com.closeby.clzby.customcontrol.CustomFontTextView
                android:id="@+id/tvBusinessName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/AppColor"
                android:layout_gravity="center_vertical"
                android:textSize="15dp"
                android:text="Business Name"/>



        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                />

            <FrameLayout
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="top|right"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circle"
                >
                <LinearLayout
                    android:id="@+id/specialOfferView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvDelayOrginPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$300"
                            android:textColor="@android:color/white"
                            android:textSize="6dp"
                            android:lines="1"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="1dp"
                            android:background="@color/LineColor"/>
                    </FrameLayout>


                    <TextView
                        android:id="@+id/tvDelaySpecialPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="$300"
                        android:textColor="@android:color/white"
                        android:textSize="8dp"
                        android:lines="1"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvOriginPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="$300"
                    android:textColor="@android:color/white"
                    android:textSize="8dp"
                    android:lines="1"/>

            </FrameLayout>



        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivLike"
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/like_button_tapped"/>

            <com.closeby.clzby.customcontrol.CustomFontTextView
                android:id="@+id/tvLike"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="20"
                android:textSize="12dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="2dp"
                android:textColor="@color/AppBackColor"/>

            <Button
                android:id="@+id/btnMap"
                android:layout_width="20dp"
                android:layout_height="26dp"
                android:padding="3dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/icon_logo"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/LineColor"
            android:layout_margin="1dp"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <com.closeby.clzby.customcontrol.CustomFontTextView
                android:id="@+id/tvTagLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/AppBackColor"
                android:layout_marginTop="5dp"
                android:textSize="11dp"
                android:text="Tag Line"/>

            <com.closeby.clzby.customcontrol.CustomFontTextView
                android:id="@+id/tvDealName"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/AppColor"
                android:textSize="14dp"
                android:text="Deal Name"/>

            <com.closeby.clzby.customcontrol.CustomFontTextView
                android:id="@+id/tvDealDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:textColor="@color/AppBackColor"
                android:textSize="11dp"
                android:text="Deal Description"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp">

                <com.closeby.clzby.customcontrol.CustomFontTextView
                    android:id="@+id/tvSubCategory"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/AppBackColor"
                    android:textSize="10dp"
                    android:text="Sub Category"/>

                <LinearLayout
                    android:id="@+id/decayDurationView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="bottom"
                    android:layout_margin="3dp">

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/icon_timer"/>

                    <TextView
                        android:id="@+id/tvDecayDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Expired"
                        android:textColor="@color/AppBackColor"
                        android:textSize="8dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>